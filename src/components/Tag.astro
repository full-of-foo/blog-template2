---
export interface Props {
	tag: string
}
const { tag } = Astro.props
---

<a href={`/tags/${encodeURIComponent(tag.toLowerCase())}`} aria-label={tag}>
	<span
		class='font-semibold shadow text-sm w-fit px-2 py-1 md:px-5 md:py-2 rounded-full'
		style='background: rgb(214, 214, 214);'
	>
		{tag ?? 'Blog Tag'}
	</span>
</a>
